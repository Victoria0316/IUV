<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingBottom="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/tv_title_left"
        android:layout_toRightOf="@id/iv_left"
        android:layout_alignParentRight="true"
        style="@style/CommonTitle"
        android:textSize="@dimen/common_font_30px"
        android:layout_marginLeft="@dimen/common_padding_small" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/CommonTitle" />


    <TextView
        android:id="@+id/tv_title_right"
        style="@style/CommonTitle"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/common_font_26px" />


    <ImageView
        android:id="@+id/iv_to_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_centerVertical="true"
        android:visibility="gone" />


    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tv_right_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/tv_right"
        android:visibility="gone"
        android:layout_marginRight="@dimen/common_margin"
        />

    <include
        android:id="@+id/il_search_bar"
        android:visibility="gone"
        layout="@layout/include_search_titlebar">

    </include>
</RelativeLayout>
