<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_up"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/common_dimen_10dp"
        android:paddingBottom="@dimen/common_dimen_10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cry" />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="亲，没有找到啊~再试试吧！"
            android:layout_marginTop="@dimen/common_dimen_5dp"
            android:textSize="@dimen/common_font_26px"
            android:padding="10dp"
            android:textColor="@color/common_gray_nick"/>




    </LinearLayout>


    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_font_26px"
        android:padding="10dp"
        android:text="@string/s_disappear"
        android:gravity="center"
android:background="@drawable/dialog_down"
        android:textColor="@color/common_gray_nick"/>


</LinearLayout>