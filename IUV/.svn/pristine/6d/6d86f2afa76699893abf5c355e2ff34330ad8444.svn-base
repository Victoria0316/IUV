<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/write_review"
        android:layout_marginTop="@dimen/common_dimen_20dp"
        android:layout_marginLeft="@dimen/common_dimen_10dp"
        android:layout_marginRight="@dimen/common_dimen_10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_write_commnet"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="@dimen/common_dimen_15dp"
            android:layout_marginLeft="@dimen/common_dimen_15dp"
            android:layout_marginRight="@dimen/common_dimen_15dp"
            android:layout_marginTop="@dimen/common_dimen_10dp"
            android:background="@null"
            android:gravity="top"
            android:hint="快来写点评吧~"
            android:textSize="@dimen/common_font_24px" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/common_dimen_5dp"
            android:paddingTop="@dimen/common_dimen_5dp">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/camera_first"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_camera" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"

                android:gravity="center">

                <ImageView
                    android:id="@+id/camera_center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_camera"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/camera_last"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/common_camera"
                    android:visibility="invisible" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>