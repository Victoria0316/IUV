<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widget="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="?android:attr/actionBarSize"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/common_page_bg"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@color/white"
            >
            <TextView
                style="@style/common_text"
                android:id="@+id/market_name"
                android:layout_centerVertical="true"
                android:paddingRight="@dimen/common_dimen_20dp"
                android:paddingTop="@dimen/common_dimen_10dp"
                android:paddingBottom="@dimen/common_dimen_10dp"
                android:layout_marginLeft="@dimen/common_margin"
                android:text="港汇商场"
                />
            <TextView
                style="@style/common_text"
                android:id="@+id/praise_count"
                android:layout_centerVertical="true"
                android:text="1232"
                android:layout_marginRight="@dimen/common_margin"
                android:layout_alignParentRight="true"
                android:textColor="@color/common_gray"
                />
            <ImageView
                style="@style/common_text"
                android:id="@+id/praise"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/common_margin_big"
                android:src="@drawable/praise"
                android:layout_toLeftOf="@id/praise_count"
                android:layout_marginRight="@dimen/common_margin_little"
                />
            <ImageView
                style="@style/common_text"
                android:id="@+id/coll"
                android:layout_centerVertical="true"
                android:src="@drawable/coll"
                android:layout_toLeftOf="@id/praise"
                />
        </RelativeLayout>

        <bluemobi.iuv.view.CustomListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/common_transparent"
            android:dividerHeight="@dimen/common_margin"
            android:cacheColorHint="@color/common_transparent"
            android:listSelector="@color/common_transparent"
            android:layout_marginTop="@dimen/common_margin"
            >

        </bluemobi.iuv.view.CustomListView>

    </LinearLayout>

</ScrollView>