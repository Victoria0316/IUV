<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_bg"
    android:paddingTop="?android:attr/actionBarSize"
    android:paddingLeft="@dimen/common_dimen_10dp"
    android:paddingRight="@dimen/common_dimen_10dp">

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimen_10dp"
        android:layout_marginTop="@dimen/common_dimen_25dp"
        android:hint="@string/Login_input_phone"
        android:textSize="@dimen/common_font_24px"
        android:textColorHint="@color/common_gray"
        android:background="@drawable/common_input_bg"
        android:inputType="number"
        android:phoneNumber="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimen_10dp"
        android:layout_marginTop="@dimen/common_dimen_10dp"
        android:hint="@string/Login_input_pwd"
        android:textSize="@dimen/common_font_24px"
        android:textColorHint="@color/common_gray"
        android:background="@drawable/common_input_bg"
        android:password="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimen_10dp"
        android:layout_marginTop="@dimen/common_dimen_10dp"
        android:hint="请输入新密码为8-18位数字加字母，字符"
        android:textSize="@dimen/common_font_24px"
        android:textColorHint="@color/common_gray"
        android:background="@drawable/common_input_bg"
        android:password="true"
        android:singleLine="true" />

    <EditText
        android:id="@+id/again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_dimen_10dp"
        android:layout_marginTop="@dimen/common_dimen_10dp"
        android:hint="@string/Login_input_again"
        android:textSize="@dimen/common_font_24px"
        android:textColorHint="@color/common_gray"
        android:background="@drawable/common_input_bg"
        android:password="true"
        android:singleLine="true" />

    <Button
        android:id="@+id/determine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/common_btnred_bg"
        android:text="@string/determine"
        android:textSize="@dimen/common_font_30px"
        android:textColor="@color/common_white"
        android:layout_marginTop="@dimen/common_dimen_10dp" />

</LinearLayout>