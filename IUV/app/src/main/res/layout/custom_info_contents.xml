<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_point_up"
        android:text="港汇商场"
        android:textColor="#dd6361"
        android:gravity="center"
        android:textSize="@dimen/common_font_26px"
        android:background="@drawable/point_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

    <TextView
        android:id="@+id/tv_point_down"
        android:text="200公里数"
        android:textSize="@dimen/common_font_26px"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/common_dimen_2dp"
        android:textColor="@color/white"
        android:background="@drawable/point_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </TextView>

</LinearLayout>