<?xml version="1.0" encoding="utf-8"?><!--P11_5我的意见-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="?android:attr/actionBarSize"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="135dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/common_input_bg"
        android:gravity="top"
        android:hint="亲，给自己起个昵称吧~"
        android:padding="10dp"
        android:textSize="@dimen/common_font_26px"
        android:id="@+id/nickname" />



    <Button
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_dimen_10dp"
        android:background="@drawable/common_btnred_bg"
        android:text="@string/confirm"
        android:textColor="@color/common_white"
        android:textSize="@dimen/common_font_30px" />


</LinearLayout>
