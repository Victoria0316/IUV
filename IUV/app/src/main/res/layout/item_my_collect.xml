<?xml version="1.0" encoding="utf-8"?>

<!-- P11_3我的宝藏-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/head"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="11dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="13dp"
            android:scaleType="fitXY"
            android:background="@drawable/bztupian1" />

        <TextView
            android:id="@+id/market_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/head"
            android:ellipsize="end"
            android:maxEms="11"
            android:singleLine="true"
            android:text="徐汇区港汇商场"
            android:textSize="@dimen/common_font_26px"  />

        <ImageView
            android:id="@+id/iv_right"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/baxtu" />


        <TextView
            android:id="@+id/market_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_name"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/head"
            android:singleLine="true"
            android:text="虹桥路港汇广场587号10B座一号楼"
            android:textSize="@dimen/common_font_22px" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/market_address"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/head"
            android:text="电话：021-88963321"
            android:textColor="#ea9f9d"
            android:textSize="@dimen/common_font_22px" />


    </RelativeLayout>


</LinearLayout>
